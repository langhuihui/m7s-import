{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "/@theme/*": [".vitepress/theme/*"]
    }
  },
  "include": ["env.d.ts", "src/**/*", ".vitepress/**/*"]
}
